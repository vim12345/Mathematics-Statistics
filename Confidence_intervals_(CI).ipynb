      "source": [
        "import numpy as np\n",
        "from scipy import stats\n",
        "\n",
        "data = np.random.normal(loc=5, scale=2, size=50)\n",
        "n = len(data)\n",
        "mean = np.mean(data)\n",
        "std_err = stats.sem(data)  # s/sqrt(n)\n",
        "ci = stats.t.interval(0.95, df=n-1, loc=mean, scale=std_err)\n",
        "print(\"Mean:\", mean)\n",
        "print(\"95% CI:\", ci)\n"
      ]
    }
  ]
